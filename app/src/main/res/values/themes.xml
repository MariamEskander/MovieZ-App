<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeldaTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_2A50D7</item>
        <item name="colorPrimaryVariant">@color/color_2A50D7</item>
        <item name="colorOnPrimary">@color/color_2A50D7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_2A50D7</item>
        <item name="colorSecondaryVariant">@color/color_2A50D7</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="SplashTheme" parent="Theme.TeldaTask">
        <item name="android:background">@color/color_2A50D7</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

    </style>
</resources>