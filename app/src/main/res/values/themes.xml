<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeldaTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_2A50D7</item>
        <item name="colorPrimaryVariant">@color/color_2A50D7</item>
        <item name="colorOnPrimary">@color/color_2A50D7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_2A50D7</item>
        <item name="colorSecondaryVariant">@color/color_2A50D7</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="SplashTheme" parent="Theme.TeldaTask">
        <item name="android:background">@color/color_2A50D7</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/color_797F8B</item>
        <item name="colorControlActivated">@color/color_fdd017</item>
    </style>

    <style name="DialogCustomTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>